<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" >
    
    <ImageView 
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/blue_shape"
        />
    
    <ImageView 
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/nurse_photo"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        />
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/nurse_name" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="猪美美   护士"
            android:textSize="15sp"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:id="@+id/nurse_domain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="三楼内科"
                android:textSize="8sp"
                />
            <TextView
                android:id="@+id/nurse_worposition" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="VIP病房护士长"
                android:textSize="8sp"
                />
        </LinearLayout>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/nurse_last_call"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:text="12:40  am"
        android:textSize="8sp"
        />
	
    <ImageButton
        android:id="@+id/nurse_call" 
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/call_icon"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        />
</LinearLayout>

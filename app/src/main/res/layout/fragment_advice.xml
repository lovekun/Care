<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >



    <!-- 排序方法和筛选的线性布局块 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/paixu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="排序方式"
            android:textColor="#0bc4c1"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/sort_down"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/paixu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/down" />

        <View
            android:id="@+id/anchor"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#cecccd" />

        <TextView
            android:id="@+id/shaixuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/anchor"
            android:layout_marginLeft="50dp"
            android:text="筛   选"
            android:textColor="#0bc4c1"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/sift_down"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@id/shaixuan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/down" />
    </RelativeLayout>

    <View
        android:id="@+id/pop_anchor"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecccd" />

    <!-- 中间病人基本信息和长期医嘱和短期医嘱得选择 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#ffffff"
        android:paddingTop="15dp" >

        <ImageView
            android:id="@+id/head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/head_photo" />

        <TextView
            android:id="@+id/p_name_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/head"
            android:text="黄小杰"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/p_bed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p_name_advice"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/p_name_advice"
            android:text="101-01床"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/p_sex"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_alignBottom="@id/p_name_advice"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/p_bed"
            android:background="@drawable/man_tip" />

        <TextView
            android:id="@+id/p_sex_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p_name_advice"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/p_sex"
            android:text="(男) 45岁"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/p_intime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_name_advice"
            android:layout_below="@id/p_name_advice"
            android:layout_marginTop="5dp"
            android:text="2014－7-10入院"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p_intime"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/p_intime"
            android:text="入院：22天"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/p_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/p_name_advice"
            android:layout_below="@id/p_intime"
            android:layout_marginTop="5dp"
            android:text="住院号：130734-10"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/p_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/p_num"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/p_num"
            android:text="医师：王幸"
            android:textSize="12sp" />

        <!-- 临时医嘱和长期医嘱得radiogroup -->

        <RadioGroup
            android:id="@+id/advice_choose"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@id/head"
            android:layout_below="@id/head"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/advice_choose"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/advice_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_left_advice"
                android:button="@null"
                android:gravity="center"
                android:text="临时医嘱"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/advice_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_right_advice"
                android:button="@null"
                android:gravity="center"
                android:text="长期医嘱"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </RadioGroup>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cecccd" />
    <!-- 医嘱列表 -->

    <FrameLayout
        android:id="@+id/advice_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </FrameLayout>

</LinearLayout>
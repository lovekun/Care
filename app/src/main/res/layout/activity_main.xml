<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1fc7c5" >

        <RadioGroup
            android:id="@+id/radioGroup_main"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:background="@drawable/radiogroup_main"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radiobutton_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_left_main"
                android:button="@null"
                android:text="患者列表"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radiobutton_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/radiobutton_right_main"
                android:button="@null"
                android:text="当班护士"
                android:textColor="#1ec6c4"
                android:textSize="15sp" />
        </RadioGroup>
    </RelativeLayout>
    
    <FrameLayout
        android:id="@+id/main_container" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
    </FrameLayout>

</LinearLayout>